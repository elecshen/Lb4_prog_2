<Page x:Class="Lb4_prog_2.PageChoiceGame"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Lb4_prog_2"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageChoiceGame">

    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="auto"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="Счет: " FontSize="18"/>
            <Label Grid.Column="1" Content="{Binding Score}" FontSize="18"/>
        </Grid>
        <Label Grid.Row="1" Content="{Binding GSOriginal}" FontSize="24"/>
        <Label Grid.Row="2" Content="Выберите перевод" FontSize="18"/>
        <ListBox Grid.Row="3" ItemsSource="{Binding GSWords}" FontSize="20" SelectedItem="{Binding GSEntered}"/>
        <Button Grid.Row="4" Content="{Binding CGSButtonText}" FontSize="18" Command="{Binding CGSNextCommand}" Height="40"/>
        <Grid Grid.Row="5" Visibility="{Binding CGSButtonVisibility}">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="auto"/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Content="Правильный ответ" FontSize="18"/>
            <Label Grid.Row="1" Content="{Binding GSRightAnswer}" FontSize="20"/>
        </Grid>
    </Grid>
</Page>
