<Page x:Class="Lb4_prog_2.PageMain"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Lb4_prog_2"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PageMain">

    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Button Grid.Row="0" Content="Редактировать словарь" FontSize="18" Height="40" Width="250" Command="{Binding OpenEditorCommand}"/>
        <Label Grid.Row="1" Content="Выбери игру-тренировку" FontSize="18" Margin="0,10,0,5" HorizontalAlignment="Center"/>
        <Button Grid.Row="2" Content="Правильный перевод" Margin="5" FontSize="18" Height="40" Width="250" Command="{Binding OpenChoiceGameCommand}"/>
        <Button Grid.Row="3" Content="Напиши сам" Margin="5" FontSize="18" Height="40" Width="250" Command="{Binding OpenWriteGameCommand}"/>
    </Grid>
</Page>
